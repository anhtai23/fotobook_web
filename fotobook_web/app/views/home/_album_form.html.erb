<%= form_for @album,html:{ multipart: true } , url: albums_path, remote: true  do |f| %>
  <div class="form-group">
    <%= f.label :Title%>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.text_field :user_id, value: current_user.id, class: 'd-none' %>
  </div>
  <div class="form-group">
      <%= f.fields_for :post_attachments do |p| %>
     <div class="field">
      <%= f.file_field :image ,multiple: true, name: "photos[image][]"%>
     </div>
   <% end %>
  </div>
  <div class="form-group">
    <%= f.label :Description%>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <br>
  <div class="text-center">
    <%= f.submit 'Create Album', class: 'btn btn-primary' %>
  </div>
<% end %>
